            android:layout_height="wrap_content"
            android:id="@+id/textView19h"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView18h"/>
    <LinearLayout
            android:id="@+id/linear"
            android:orientation="vertical"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/textView14h"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/textView8h"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="48dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19h">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="0dp"
                android:layout_weight="2"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yolo"
                    android:gravity="center"
                    android:background="@android:color/holo_red_light"
            />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yolo"
                    android:gravity="center"
                    android:background="@android:color/holo_blue_bright"
            />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="3"
        >
