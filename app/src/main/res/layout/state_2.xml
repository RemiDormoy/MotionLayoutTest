                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yolo"
                    android:gravity="center"
                    android:background="@android:color/holo_orange_dark"
            />

        </android.support.v7.widget.CardView>

    </LinearLayout>
