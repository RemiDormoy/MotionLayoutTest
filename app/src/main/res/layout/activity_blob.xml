<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerBlob">


    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@android:color/transparent"
            android:thumb="@drawable/ic_play_circle_outline_black_24dp"
            android:max="1000"
            tools:progress="500"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/whiteBackgroundContainer"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="0dp"
                android:layout_height="240dp" app:srcCompat="@drawable/ic_directions_bike_black_24dp"
                android:id="@+id/imageView27" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView25"/>
        <TextView
                android:text="Run 200km a day to stay fit !"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                android:gravity="center"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView27"
                android:fontFamily="monospace" android:textStyle="bold" android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView26"/>
        <TextView
                android:text="You have another solution but it is worst..."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView26" android:textStyle="normal|italic"
                android:textSize="14sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView25"
                app:layout_constraintHorizontal_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pinkBackgroundContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:layout_width="0dp"
                android:layout_height="240dp" app:srcCompat="@drawable/ic_directions_run_black_24dp"
                android:id="@+id/imageView299" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                android:tint="@android:color/white"
                android:layout_marginEnd="80dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView254"/>
        <TextView
                android:text="If you don't want to ride a bike, it's gonna be 30km a day for you !"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/textView254" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView299"
                android:fontFamily="monospace" android:textStyle="bold" android:textSize="24sp"
                android:gravity="center"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView261"/>
        <TextView
                android:text="Hope you like it !"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView261" android:textStyle="normal|italic"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="14sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView254"
                app:layout_constraintHorizontal_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>