<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="200dp">


    <TextView
            android:text="Grand Canyon National Park, Arizona, United States"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:gravity="center"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:gravity="end"
            android:progress="4"
            android:rating="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView30"
            app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
            android:padding="8dp"
            android:id="@+id/commentsPicturesContainer"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/image1ImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_girl"/>

        <ImageView
                android:layout_marginEnd="8dp"
                android:id="@+id/image2ImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_man"/>

        <ImageView
                android:layout_width="32dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/image3ImageView"
                android:layout_height="32dp"
                android:src="@drawable/ic_girl_1"/>

        <ImageView
                android:layout_width="32dp"
                android:id="@+id/image4ImageView"
                android:layout_marginEnd="8dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_man_2"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>